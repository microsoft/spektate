{
  "name": "spektate",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.0",
    "express": "^4.17.1",
    "spektate": "^1.0.10"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc src/** --outDir ./build/",
    "lint": "tslint -p tsconfig.json -c tslint.json src/*.ts",
    "prettier": "prettier --write src"
  },
  "devDependencies": {
    "@types/node": "^12.6.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.5",
    "prettier": "^2.0.5",
    "ts-node": "^8.9.0",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
