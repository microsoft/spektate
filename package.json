{
  "name": "spektate",
  "version": "0.1.0",
  "main": "build/dist/index.js",
  "types": "build/dist/index.d.ts",
  "dependencies": {
    "@types/express": "^4.17.0",
    "azure-devops-ui": "^1.155.0",
    "cli-table": "^0.3.1",
    "commander": "^2.20.0",
    "office-ui-fabric-react": "^7.10.0",
    "open": "^6.4.0",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-scripts-ts": "^4.0.8",
    "spektate": "^1.0.0",
    "body-parser": "^1.19.0"
  },
  "scripts": {
    "start-backend": "ts-node src/backend/index.ts",
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build && tsc src/backend/** --outDir build/backend/ && tsc src/server.ts --outDir build/",
    "eject": "react-scripts-ts eject",
    "lint": "tslint -p tsconfig.json -c tslint.json src/**/*.ts",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/jest-when": "^2.7.0",
    "@types/node": "^12.6.8",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "chai": "^4.2.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "pkg": "^4.4.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "pkg": {
    "assets": [
      "./node_modules/@types",
      "./node_modules/typescript/lib/*.d.ts",
      "src/**/*.ts",
      "./tsconfig.json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,json,md,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "resolutions": {
    "**/*/serialize-javascript": ">=2.1.1",
    "**/*/mem": ">=4.0.0",
    "**/*/braces": ">=2.3.1"
  }
}
